#!/bin/bash
# Top-level wrapper for vLLM service management

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
MANAGE_SCRIPT="${SCRIPT_DIR}/scripts/manage_services.sh"

if [ ! -f "$MANAGE_SCRIPT" ]; then
    echo "Error: manage_services.sh not found at $MANAGE_SCRIPT"
    exit 1
fi

# Pass all arguments to the management script
"$MANAGE_SCRIPT" "$@"
